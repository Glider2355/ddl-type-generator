{
  "name": "dd-type-generator",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npm install && tsc",
    "start": "tsc && node dist/index.js",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,json,css,md}\" \"tests/**/*.{js,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,tsx,json,css,md}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "mysql2": "^3.11.0",
    "node-sql-parser": "^5.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": "prettier --write"
  }
}
